{
    "name": "PWA QR Scanner",
    "short_name": "QR Scanner",
    "description": "Una aplicación web progresiva para escanear códigos QR.",
    "start_url": "./index.html",
    "scope": "./",
    "display": "standalone",
    "orientation": "portrait-primary",
    "background_color": "#f4f4f4",
    "theme_color": "#333333",
    "icons": [
      {
        "src": "icons/icon-192x192.png",
        "sizes": "192x192",
        "type": "image/png"
      },
      {
        "src": "icons/icon-512x512.png",
        "sizes": "512x512",
        "type": "image/png"
      }
    ],
    "serviceworker": {
      "src": "service-worker.js",
      "scope": "./",
      "update_via_cache": "all"
    },
    "categories": ["utilities", "productivity", "tools"],
    "dir": "ltr",
    "lang": "es"
  }
  